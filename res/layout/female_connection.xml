<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentRight="true" android:text="Select connection mode"></TextView>
    <Button android:layout_height="wrap_content" android:id="@+id/button1" android:layout_below="@+id/textView1" android:text="QRCode" android:layout_width="match_parent" android:layout_alignParentLeft="true"></Button>
    <Button android:layout_height="wrap_content" android:id="@+id/button2" android:layout_below="@+id/button1" android:layout_width="match_parent" android:layout_alignLeft="@+id/button1" android:text="NFC"></Button>
    
</RelativeLayout>
