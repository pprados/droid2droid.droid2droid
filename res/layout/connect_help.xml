<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
 <TextView android:id="@+id/connect_help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:lineSpacingMultiplier="0.92"
            android:gravity="center_vertical"
        />
	<RelativeLayout android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" android:background="@android:drawable/bottom_bar">
		<Button android:id="@+id/btn_next" android:text="@string/next"
			android:drawablePadding="10dip" android:drawableRight="@drawable/ic_btn_next"
			android:minWidth="@dimen/button_minWidth" android:layout_margin="5dip"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:layout_centerVertical="true"
			android:focusableInTouchMode="false" />
	</RelativeLayout>
</LinearLayout> 